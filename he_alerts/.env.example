# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/he_alerts
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# FastAPI Configuration
SECRET_KEY=your-secret-key-here
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=["http://localhost:3000"]

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=credentials/gmail_token.json
GMAIL_SCOPES=["https://www.googleapis.com/auth/gmail.readonly"]

# Email Settings
EMAIL_SENDER=hemdesai@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_RECIPIENT=hemdesai@gmail.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# AI/ML Configuration
MISTRAL_API_KEY=your-mistral-api-key-here
MISTRAL_MODEL=mistral-large-latest

# IBKR Configuration
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1
IBKR_PAPER_TRADING=true

# Scheduler Configuration (Eastern Time)
MORNING_PRICE_TIME=10:45
AFTERNOON_PRICE_TIME=14:30
EMAIL_PROCESSING_TIME=08:50
TIMEZONE=America/New_York

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001

# Development
RELOAD=true
WORKERS=1

# Replit Configuration (for deployment)
REPLIT_DB_URL=
REPLIT_SECRET=